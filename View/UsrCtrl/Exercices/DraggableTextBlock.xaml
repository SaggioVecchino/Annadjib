<UserControl x:Class="Projet.View.UsrCtrl.Exercices.DraggableTextBlock"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Projet.View.UsrCtrl.Exercices"
             xmlns:n="clr-namespace:Nicenis.Windows;assembly=Nicenis"
             mc:Ignorable="d">
    <TextBlock Name="txt"
               FlowDirection="RightToLeft"
               n:DragSource.AllowDrag="True"
               n:DragSource.Data="{Binding}"
               n:DragSource.AllowedEffects="All"
               n:DragSource.AllowedInitiators="MouseLeftButton" />
</UserControl>