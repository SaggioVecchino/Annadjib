<UserControl x:Class="Projet.View.UsrCtrl.Admin.TitleAccueil"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Projet.View.UsrCtrl.Admin"
             mc:Ignorable="d" 
             d:DesignHeight="60" d:DesignWidth="1200">
    <Grid Background="#2196F3">
        <ContentControl x:Name="logoContent" Height="60" Width="225" VerticalAlignment="Center" HorizontalAlignment="Left"></ContentControl>
        <TextBlock x:Name="nomEcole" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,350,0" TextWrapping="Wrap" Text="{Binding NomEcole}" Width="550" Height="50" FontSize="24" Foreground="White"/>
        <Image x:Name="image" HorizontalAlignment="Right" Margin="0,0,275,0" Height="50" VerticalAlignment="Center" Width="50" Source="/Projet;component/IMAGES/BUTTONS/school.png"/>
    </Grid>
</UserControl>
