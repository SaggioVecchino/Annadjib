<UserControl x:Class="Projet.View.UsrCtrl.Admin.EleveInfo"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Projet.View.UsrCtrl.Admin"
             mc:Ignorable="d" 
             d:DesignHeight="570" d:DesignWidth="690">
    <Grid>
        <Border x:Name="backgrnd" Background="#FFFFFF" CornerRadius="3">
            <Border.Effect>
                <DropShadowEffect BlurRadius="5" ShadowDepth="0" Opacity="0.2"/>
            </Border.Effect>
        </Border>
        <Grid>
            <TextBlock x:Name="textBlock" Margin="190,85,245,0" TextWrapping="Wrap" Text="{Binding Nom}" VerticalAlignment="Top" Height="75" FontSize="48"/>
            <TextBlock x:Name="textBlock1" Margin="175,200,255,185" TextWrapping="Wrap" Text="{Binding Prenom}" FontSize="48"/>

        </Grid>

    </Grid>

</UserControl>
    
    
    
    
    
    
    
