<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Projet.UserControls.ELEVE"
             xmlns:Custom="http://metro.mahapps.com/winfx/xaml/controls" x:Class="Projet.UserControls.ELEVE.CenterContent"
             mc:Ignorable="d" 
              d:DesignHeight="570" d:DesignWidth="690">
    <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
        <Border x:Name="backgrnd" Background="#FFFFFF" CornerRadius="3">
            <Border.Effect>
                <DropShadowEffect BlurRadius="5" ShadowDepth="0" Opacity="0.2"/>
            </Border.Effect>
        </Border>
    </Grid>
</UserControl>
